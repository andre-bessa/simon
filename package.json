{
  "name": "simon",
  "version": "0.1.0",
  "description": "A Simon like game coded in plain JS (ES2015), using the Web Audio API.",
  "browserslist": [
    "defaults",
    "not ie <= 11"
  ],
  "source": "./src/index.html",
  "development": "./dist/index.html",
  "githubPages": "./docs/index.html",
  "targets": {
    "development": {
      "publicUrl": "/",
      "distDir": "./dist",
      "context": "browser",
      "isLibrary": false,
      "sourceMap": true,
      "optimize": false
    },
    "githubPages": {
      "publicUrl": "/simon",
      "distDir": "./docs",
      "context": "browser",
      "isLibrary": false,
      "sourceMap": false,
      "optimize": true
    }
  },
  "scripts": {
    "start": "parcel serve --port 5000 --target development --open",
    "prebuild": "rimraf ./docs",
    "build": "parcel build --target githubPages",
    "prebuildAllTargets": "rimraf ./docs ./dist",
    "buildAllTargets": "parcel build",
    "clean": "rimraf ./docs ./dist ./.parcel-cache"
  },
  "author": "Andre Bessa",
  "license": "MIT",
  "devDependencies": {
    "parcel": "^2.0.0-rc.0",
    "rimraf": "^3.0.2"
  }
}
