{
  "name": "simon",
  "version": "0.1.0",
  "description": "A Simon like game coded in plain JS (ES2015), using the Web Audio API.",
  "targets": {
    "githubPages": {
      "source": "./src/index.html",
      "distDir": "./docs",
      "sourceMap": false,
      "isLibrary": false,
      "context": "browser",
      "engines": {
        "browsers": [
          "> 0.5%",
          "not dead"
        ]
      }
    }
  },
  "scripts": {
    "start": "parcel serve --open",
    "prebuild": "rimraf ./docs",
    "build": "parcel build"
  },
  "author": "Andre Bessa",
  "license": "MIT",
  "devDependencies": {
    "parcel": "^2.0.0-rc.0",
    "rimraf": "^3.0.2"
  }
}
